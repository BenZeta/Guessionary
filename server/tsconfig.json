{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "typeRoots": ["./node_modules/@types", "./src/types"], // Adjusted to point to `src/types`
    "resolveJsonModule": true
  },
  "include": ["src/**/*", "src/types/**/*", "src/types/express"],
  "ts-node": {
    "files": true
  }
}

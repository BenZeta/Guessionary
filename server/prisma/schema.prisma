generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String         @id @default(uuid())
  username      String         @unique
  createdAt     DateTime       @default(now())
  updatedAt     DateTime
  avatar        String         @default("https://avatars.dicebear.com/api/bottts/1.svg")
  gameId        String?        @unique
  role          String         @default("Admin")
  contributions Contribution[]
  scores        Score[]
  Game          Game?          @relation(fields: [gameId], references: [id])
  Room          Room[]
}

model Game {
  id            String         @id @default(uuid())
  code          String         @unique
  isActive      Boolean        @default(true)
  createdAt     DateTime       @default(now())
  userId        String?        @unique
  contributions Contribution[]
  Room          Room?
  rounds        Round[]
  scores        Score[]
  User          User?
}

model Round {
  id            String         @id @default(uuid())
  gameId        String
  roundNumber   Int
  createdAt     DateTime       @default(now())
  contributions Contribution[]
  game          Game           @relation(fields: [gameId], references: [id])
}

model Contribution {
  id             String           @id @default(uuid())
  userId         String
  gameId         String
  roundId        String
  type           ContributionType
  content        String
  targetUserId   String?
  originalWordId String?
  createdAt      DateTime         @default(now())
  game           Game             @relation(fields: [gameId], references: [id])
  originalWord   Contribution?    @relation("OriginalWord", fields: [originalWordId], references: [id])
  Contribution   Contribution[]   @relation("OriginalWord")
  round          Round            @relation(fields: [roundId], references: [id])
  user           User             @relation(fields: [userId], references: [id])
}

model Score {
  id        String   @id @default(uuid())
  userId    String
  gameId    String
  points    Int      @default(0)
  createdAt DateTime @default(now())
  game      Game     @relation(fields: [gameId], references: [id])
  user      User     @relation(fields: [userId], references: [id])
}

model Room {
  id        String   @id
  name      String   @unique
  code      String   @unique
  isActive  Boolean  @default(false)
  createdAt DateTime @default(now())
  gameId    String?  @unique
  Game      Game?    @relation(fields: [gameId], references: [id])
  User      User[]
}

enum ContributionType {
  WORD
  DRAWING
  GUESS
}
